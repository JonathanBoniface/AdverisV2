{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}
{% block monTitre %}Liste de tous les projets{% endblock %}
{% block body %}
    <div class="text-left">
        <td><a class="btn btn-danger" href="{{ path('add_project') }}"> Creer un nouveau Projet</a></td>
    </div>
<div class="row no gutters">

        {% for project in projects %}
    <div class="col-12 col-lg-6 p-1">
        <div class ="card mb-3">
                <div class="row no-gutters align-items-center p-2">
                    <div class="col-12 col-md-4">
                        <a href="{{ path('project', {'id': project.id}) }}" class="btn btn-success">{{ project.name }}</a>
                    </div>
                    <div class="col"></div>
                    <div class="card-body">
                        <h5 class="card-title">{{ project.name }}</h5>
                        <p class="card-text">
                        <div>Prix:{{ project.priceSold }}</div>
                        <div>Temps estim√© {{ project.estimatedTime }} - Temps Passe :{{ project.spentTime }}</div>
                        <div>Technology: {{ project.technology }}</div>
                        <div>Type de travail:{{ project.type }}</div>

                        </p>
                    </div>
                </div>
        </div>

    </div>
        {% endfor %}

</div>




{% endblock %}
